{
  "name": "@hedgehog/root",
  "private": true,
  "version": "0.0.0",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^3.22.1",
    "patch-package": "^6.4.7",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "init": "lerna add @hedgehog/core --scope @hedgehog/web",
    "dev:web": "lerna exec --scope @hedgehog/web yarn dev",
    "build:core": "lerna exec --scope @hedgehog/core yarn build",
    "dev": "lerna run --parallel dev",
    "build": "lerna run build --stream",
    "postinstall": "patch-package"
  }
}
